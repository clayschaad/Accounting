@model Schaad.Accounting.Models.BookingText
@{
    Layout = "";
}

<form asp-controller="BookingText" asp-action="Save" method="post" class="form-horizontal" role="form" autocomplete="off">
    <div class="form-group">
        <label asp-for="Text" class="col-lg-4 control-label"></label>
        <div class="col-lg-8">
            <input name="Text" class="form-control" value="@Model.Text" data-validate="true"/>
        </div>
    </div>
    <div class="form-group">
        <div class="col-lg-offset-4 col-lg-8">
            <input type="submit" value="Speichern" class="btn btn-default" />
        </div>
    </div>
    <input name="Id" value="@Model.Id" class="form-control hidden" />
</form>
