@model List<Schaad.Accounting.Models.SubClass>

<h2>@ViewData["Title"] (@Model.Count)</h2>

<a class="edit" title="Neue Klasse erstellen"><span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span></a>

<table id="subClasses" class="stripe hover" data-order='[[ 0, "asc" ]]'>
    <thead>
        <tr>
            <th>Nummer</th>
            <th>Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var line in Model)
        {
            <tr>
                <td>@line.Number</td>
                <td>@line.Name</td>
                <td class="dt-right">
                    <a class="edit" data-id="@line.Id">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section scripts
{
    <script type="text/javascript" charset="utf-8">
    $(document).ready(function () {
        helper.createDataTable('#subClasses');
        helper.setEditClick('a.edit', 'SubClass');
    } );
    </script>
}